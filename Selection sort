def selection_sort(a):
    n = len(a)
    for i in range(n):
        min_idx = i
        for j in range(i+1, n):
            if a[j] < a[min_idx]:
                min_idx = j
        a[i], a[min_idx] = a[min_idx], a[i]

# Taking input from the user 
a = input("Enter the elements of the array separated by spaces: ").split()
a=[[int(i)] for i in a]
selection_sort(a)
print("Sorted array is:", a)
