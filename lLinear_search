//this is simple Linear search program which helps to understand how linear search works 

import java.util.Scanner;

class Search {
    // Creating a function called Linear_search which helps us to find the element
    // If we found the element, the function returns the index value, else it returns -1
    public int Linear_search(int[] a, int key, int size) {
        for (int i = 0; i < size; i++) {
            if (a[i] == key) {
                return i;
            }
        }
        return -1;
    }

    public static void main(String[] args) {
        // Declaring the array, size, key and result to store the return value
        Scanner s = new Scanner(System.in);
        
        System.out.println("Enter the size: ");
        int n = s.nextInt();
        
        int[] a = new int[n];
        
        System.out.println("Enter the values: ");
        for (int i = 0; i < n; i++) {
            a[i] = s.nextInt();
        }

        System.out.println("Enter the key value to find: ");
        int k = s.nextInt();

        Search searchObj = new Search();
        int result = searchObj.Linear_search(a, k, n);

        if (result >= 0) {
            System.out.println("Yes, we found the element at index " + result);
        } else {
            System.out.println("Element is not found");
        }

        s.close();
    }
}
