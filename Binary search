//Simple Binary search program 
import java.util.Scanner;

class BinarySearch {
    int binarySearch(int[] a, int si, int li, int val)//si=starting index,li=last index ,val=value   {
        int pos = -1;
        while (si <= li) {
            int mid = (si + li) / 2;
            if (a[mid] == val) {
                pos = mid;
                return pos;
            } else if (a[mid] > val) {
                li = mid - 1;
            } else {
                si = mid + 1;
            }
        }
        return pos;
    }

    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        System.out.println("Enter the size of the array:");
        int n = s.nextInt();
        int[] a = new int[n];
        
        System.out.println("Enter the array elements:");
        for (int i = 0; i < n; i++) {
            a[i] = s.nextInt();
        }
        
        System.out.println("Enter the key value:");
        int val = s.nextInt();
        
        BinarySearch bs = new BinarySearch();
        int result = bs.binarySearch(a, 0, n - 1, val);
        
        if (result >= 0) {
            System.out.println("We found the element at index " + result + ".");
        } else {
            System.out.println("The element is not found in the array.");
        }
        
        s.close();
    }
}
