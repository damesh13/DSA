//simple Binary search program 
#include <iostream>
using namespace std;

int Binary(int a[], int si, int li, int val)//si=strating index ,li=last index ,val=key value  {
    int pos = -1;
    while (si <= li) {
        int mid = (si + li) / 2;
        if (a[mid] == val) {
            pos = mid;
            return pos;
        } else if (a[mid] > val) {
            li = mid - 1;
        } else {
            si = mid + 1;
        }
    }
    return pos;
}

int main() {
    int n, val, result;
    cout << "Enter the size of the array: ";
    cin >> n;
    
    int a[n];
    cout << "Enter the values into the array: ";
    for (int i = 0; i < n; i++) {
        cin >> a[i];
    }

    cout << "Enter the key value: ";
    cin >> val;

    result = Binary(a, 0, n - 1, val);
    if (result >= 0) {
        cout << "We found the element at index " << result << "." << endl;
    } else {
        cout << "The element is not found in the array." << endl;
    }

    return 0;
}
